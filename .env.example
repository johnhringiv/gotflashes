APP_NAME="G.O.T. Flashes"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://gotflashes.com
ASSET_URL=/

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Application Start Year (for grace period logic)
# The grace period (allowing previous year entries in January) only applies AFTER this year
# Example: With START_YEAR=2026, January 2026 only allows 2026 entries (no grace period)
#          Starting January 2027+, grace period allows previous year entries
START_YEAR=2026

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single,structured,stdout
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Observability Settings
# Query logging - useful for debugging (only works in debug mode)
LOG_QUERIES=false
# Slow query logging - enabled to identify performance issues (logs queries >100ms)
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD_MS=100
# Slow request logging - logs HTTP requests that exceed threshold (in milliseconds)
SLOW_REQUEST_THRESHOLD_MS=300

DB_CONNECTION=sqlite
DB_DATABASE=database/data/database.sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true

# Trusted proxy IP for X-Forwarded-* headers (HAProxy/load balancer)
TRUSTED_PROXY_IP=

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MAIL_MAILER=resend
RESEND_KEY=
MAIL_FROM_ADDRESS="noreply@gotflashes.com"
MAIL_FROM_NAME="${APP_NAME}"

# HTTP Basic Authentication (for production environment protection)
# Leave empty to disable. Used to protect staging/preview environments.
# Note: These are plain text passwords, not hashed like user passwords.
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=
