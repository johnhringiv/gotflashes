# Production Docker Environment Configuration
# Non-sensitive defaults - safe to commit to repository
# Override sensitive values (APP_KEY, etc.) at runtime via environment variables

APP_NAME="G.O.T. Flashes"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://gotflashes.com
ASSET_URL=/

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# Logging Configuration
# Using 'stack' to enable multiple log channels including structured logging
# Creates daily rotating log files: storage/logs/laravel-YYYY-MM-DD.log
# stdout outputs to Docker logs for real-time monitoring
LOG_CHANNEL=stack
LOG_STACK=single,structured,stdout
LOG_DAILY_DAYS=14
LOG_DEPRECATIONS_CHANNEL=stack
LOG_LEVEL=info

# Observability Settings
# Query logging - disabled by default in production for performance
LOG_QUERIES=false
# Slow query logging - enabled to identify performance issues (logs queries >100ms)
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD_MS=100
# Slow request logging - logs HTTP requests that exceed threshold (in milliseconds)
SLOW_REQUEST_THRESHOLD_MS=300

DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/data/database.sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MAIL_MAILER=resend
MAIL_FROM_ADDRESS="noreply@gotflashes.com"
MAIL_FROM_NAME="G.O.T. Flashes"

# Sensitive values - MUST be set at runtime via environment variables
# Never commit actual values for these!
APP_KEY=
RESEND_KEY=

# Optional: HTTP Basic Authentication for staging/preview environments
# Leave empty to disable
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=

# App Launch Year - Grace period only applies after this year
# January grace period allows previous year entries ONLY if current year > START_YEAR
START_YEAR=2026
