# Production Docker Environment Configuration
# Non-sensitive defaults - safe to commit to repository
# Override sensitive values (APP_KEY, etc.) at runtime via environment variables

APP_NAME="GOT-FLASHES"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://gotflashes.com
ASSET_URL=/

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# Logging Configuration
# Using 'daily' for file-based logs with automatic rotation
# Creates new log file each day: storage/logs/laravel-YYYY-MM-DD.log
LOG_CHANNEL=daily
LOG_DAILY_DAYS=14
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

DB_CONNECTION=sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@gotflashes.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sensitive values - MUST be set at runtime via environment variables
# Never commit actual values for these!
APP_KEY=

# Optional: HTTP Basic Authentication for staging/preview environments
# Leave empty to disable
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=
